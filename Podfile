platform :ios, '8.0'
source 'https://github.com/CocoaPods/Specs.git'

def shared_pods
    pod 'AFNetworking'
   	pod 'AFNetworkActivityLogger'
   	pod 'PureLayout'
	pod 'InstagramKit'
	pod 'InstagramKit/UICKeyChainStore'
	pod 'Reachability'
end

target ’ShowoffDemo’ do
    shared_pods
end

target 'ShowoffDemoUITests' do
    shared_pods
end

target 'ShowoffDemoTests' do
    shared_pods
end
